        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <mapping class="planet.entity.Hist"/>
        <mapping class="planet.entity.Order"/>
        <mapping class="planet.entity.ProductCategory"/>
        <mapping class="planet.entity.Product"/>
        <mapping class="planet.entity.User"/>
        <mapping class="planet.entity.UserRole"/>
    </session-factory>
</hibernate-configuration>